<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Quiz.Scoreboard">
    
    <StackLayout BackgroundColor="#282828">
        <Frame BackgroundColor="#121212" Padding="24" CornerRadius="0">
            <Label x:Name="Heading" Text="Ergebnis" TextColor="White" HorizontalTextAlignment="Center" FontSize="36"/>
        </Frame>
        <Label x:Name="ErgebnisLbl" TextColor="White" FontSize="Medium" Padding="30,10,30,10" HorizontalTextAlignment="Center"/>
        <Button x:Name="PlayAgainBtn" Text="Erneut Spielen" Clicked="PlayAgainBtn_Clicked" Opacity="100" IsEnabled="True"/>
    </StackLayout>
</ContentPage>